{{#each this}}
<li class="list-item">
	<button type="button" id='{{id}}'>
		<div class="thumb">
			<img src='https://image.tmdb.org/t/p/w300{{poster_path}}' alt="photo">
		</div>
		<div class="descr">
			<p class="title">{{title}}</p>
			<p class="genres-year">{{genre_ids}} | {{release_date}} <span class="vote">{{vote_average}}</span></p>
		</div>
	</button>
</li>
{{/each}}

